<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Search Results</title>
    <link rel="stylesheet" href="/styles.css"> <!-- Main styles -->
    <link rel="stylesheet" href="/searchResults.css"> <!-- Search Results specific styles -->
</head>
<body>
    <div class="search-results-container">
        <h1>Search Results</h1>
        <% if (blogs.length > 0) { %>
            <ul>
                <% blogs.forEach((blog, index) => { %>
                    <li>
                        <h2><%= blog.title %></h2>
                        <p><strong>By:</strong> <%= blog.name %></p>
                        <p><%= blog.content %></p>
                        <div class="blog-actions">
                            <a href="/blogs/<%= index %>/edit" class="button">Edit</a>
                            <form action="/blogs/<%= index %>/delete" method="POST" style="display:inline;">
                                <button type="submit" class="button">Delete</button>
                            </form>
                        </div>

                        <!-- Comments Section -->
                        <h3>Comments:</h3>
                        <ul>
                            <% blog.comments.forEach(comment => { %>
                                <li><strong><%= comment.user %>:</strong> <%= comment.comment %></li>
                            <% }) %>
                        </ul>
                        <form action="/blogs/<%= index %>/comments" method="POST">
                            <textarea name="comment" placeholder="Add a comment" required></textarea>
                            <button type="submit" class="button">Comment</button>
                        </form>
                    </li>
                <% }) %>
            </ul>
        <% } else { %>
            <p><%= message %></p>
        <% } %>
        <a href="/blogs" class="back-link">Back to Blogs</a>
    </div>
</body>
</html>